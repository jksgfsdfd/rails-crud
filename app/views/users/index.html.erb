<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th colspan="3">Actions</th>  
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= link_to "Show" , user_path(user) , data:{turbo_method: :get}%></td>
                <% if logged_in? && current_user==user%>
                    <td><%= link_to "Edit" , edit_user_path(user) , data:{turbo_method: :get}%></td>
                    <td><%= link_to "Delete" , user_path(user) , data:{turbo_method: :delete,turbo_confirm:"This will delete the account and all its articles"}%></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>