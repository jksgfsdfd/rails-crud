<% if @article.errors.any? %>
    <h2>Couldnt upload article</h2>
    <ol>
        <% @article.errors.full_messages.each do |err_msg| %>
            <li>
            <%= err_msg%>
            </li>
        <% end %>
    </ol>
<% end %>


<%= form_with scope: :article,url: articles_path,data: {turbo: false}, local: true do |f|%>
    <%=f.label :title%><br>
    <%=f.text_field :title%><br>

    <%=f.label :description%><br>
    <%=f.text_area :description%><br>

    <%=f.submit%>
<% end %> 